<!DOCTYPE html>
<html>
<head>
  <title>Register</title>
  <link rel="stylesheet" type="text/css" href="/styles.css">
</head>
<body>
  <h1>Register</h1>
  <% if (errors && errors.length > 0) { %>
    <ul>
      <% errors.forEach(function(error) { %>
        <li><%= error.msg %></li>
      <% }) %>
    </ul>
  <% } %>
  <form action="/users/register" method="POST">
    <div class="form-group">
      <label for="username">Username:</label>
      <input type="text" name="username" required class="form-control" value="<%= typeof username != 'undefined' ? username : '' %>">
    </div>
    <div class="form-group">
      <label for="password">Password:</label>
      <input type="password" name="password" required class="form-control">
    </div>
    <div class="form-group">
      <label for="password2">Confirm Password:</label>
      <input type="password" name="password2" required class="form-control">
    </div>
    <button type="submit" class="btn btn-primary">Register</button>
  </form>
  <p>Already have an account? <a href="/users/login">Login</a></p>
</body>
</html>
